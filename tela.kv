ScreenManager:
    InitialScreen:
    LoginScreen:
    AboutScreen:
            
<InitialScreen>:
    name: "initial"
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1
        Image:
            source: "images/logo.png"
            size_hint: .5, .5
            pos_hint: {"center_x": .5, "center_y":.65}
        Button:
            background_normal: "images/fundotexto.png"
            text: "COMEÃ‡AR AGORA"
            font_size: "15sp"
            font_name: "fonts/Poppins-Regular.ttf"
            size_hint: .6, .17
            pos_hint: {"center_x": .5, "center_y":.49}
            on_press: app.root.current = 'login'
        Button:
            background_normal: "images/fundotexto.png"
            text: "SOBRE O APP"
            font_size: "15sp"
            font_name: "fonts/Poppins-Regular.ttf"
            size_hint: .6, .17
            pos_hint: {"center_x": .5, "center_y":.4}
            on_press: app.root.current = 'about'

<LoginScreen>:
    name: 'login'
    orientation: 'vertical'
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1
        Image:
            source: 'images/logo.png'
            size_hint: 0.4, 0.4
            pos_hint: {"center_x": .5, "center_y": .85}
        Label:
            text: 'Nome:'
            color: 'black'
            font_size:"10sp"
            font_name: "fonts/Poppins-Medium.ttf"
            pos_hint: {"center_x": 0.1, "center_y": .63}
        TextInput:
            id: 'text'
            size_hint_x: .9
            pos_hint: {"center_x": .5, "center_y": .57}
            size_hint_y: None
            height: 30
            width: 20
        Button:
            background_normal: "images/fundotexto.png"
            text: "Voltar"
            size_hint: .3, .17
            on_press: app.root.current = 'initial'

<AboutScreen>
    name: "about"
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1
        Image:
            source: "images/logo.png"
            size_hint: .72, .72
            pos_hint: {"center_x":.5, "center_y":.75}
