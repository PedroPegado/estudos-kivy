ScreenManager:
    InitialScreen:
    LoginScreen:
    AboutScreen:
            
<InitialScreen>:
    name: "initial"
    MDFloatLayout:
        md_bg_color: 189/255, 159/255, 131/255, 1
        name: 'fundo'
        FitImage:
            source: 'images/fundo.png'
        Image:
            source: "images/logo.png"
            size_hint: .7, .7
            pos_hint: {"center_x": .5, "center_y":.65}
        MDFillRoundFlatButton:
            text: "SOBRE"
            font_style: "Button"
            md_bg_color: 100/255, 37/255, 9/255
            size_hint: .6, .09
            pos_hint: {"center_x": .5, "center_y":.28}
            on_press: app.root.current = 'about'
            on_press: app.root.transition.direction = 'left'    

        MDFillRoundFlatButton:
            text: "COMEÃ‡AR AGORA"
            font_style: "Button"
            md_bg_color: 100/255, 37/255, 9/255
            size_hint: .6, .09
            pos_hint: {"center_x": .5, "center_y":.4}
            on_press: app.root.current = 'login'
            on_press: app.root.transition.direction = 'left' 
        

<LoginScreen>:
    name: 'login'
    orientation: 'vertical'
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1
        Image:
            source: 'images/logo.png'
            size_hint: 0.4, 0.4
            pos_hint: {"center_x": .5, "center_y": .85}
        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .62}   
            MDLabel:
                text:"Nome: "
                font_size: "12sp"
                font_name: "fonts/Poppins-Medium.ttf"
                pos_hint: {"center_x": .5, "center_y": .9} 
            TextInput:
                id: nome
                size_hint_y: .75
                font_name: "fonts/Poppins-Regular.ttf"
                pos_hint: {"center_x": .49, "center_y": .43} 
                background_color: 0, 0, 0, 0    
                cursor_color: 0, 0, 0, 1
                cursor_width: "2sp"
                foreground_color: 255/255, 255/255, 255/255, 1
                font_size: "16sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": 0.25}
                size_hint_y: .02    
                md_bg_color: 0/255, 0/255, 0/255, 1


        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .52}   
            MDLabel:
                text:"Senha: "
                font_size: "12sp"
                font_name: "fonts/Poppins-Medium.ttf"
                pos_hint: {"center_x": .5, "center_y": .9} 
            TextInput:
                id: senha
                size_hint_y: .75
                font_name: "fonts/Poppins-Regular.ttf"
                pos_hint: {"center_x": .49, "center_y": .43} 
                background_color: 0, 0, 0, 0    
                cursor_color: 0, 0, 0, 1
                cursor_width: "2sp"
                foreground_color: 255/255, 255/255, 255/255, 1
                font_size: "16sp"
                multiline: False
                password: True
            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": 0.25}
                size_hint_y: .02    
                md_bg_color: 0/255, 0/255, 0/255, 1
        

        MDIconButton:
            icon: "chevron-left"
            icon_size: "40sp"
            theme_icon_color: "Custom"
            icon_color: 156/255, 93/255, 65/255, 1
            pos_hint: {"center_x": .15, "center_y": .09} 
            on_press: app.root.current = 'initial'


<AboutScreen>
    name: "about"
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1
        Image:
            source: "images/logo.png"
            size_hint: .72, .72
            pos_hint: {"center_x":.5, "center_y":.75}
        Label: 
            text: "SOBRE SOBRE SOBRE SOBRE\nSOBRE SOBRE SOBRE SOBRE\nSOBRE SOBRE SOBRE SOBRE\nSOBRE SOBRE SOBRE SOBRE\n"
        MDIconButton:
            icon: "chevron-left"
            icon_size: "40sp"
            theme_icon_color: "Custom"
            icon_color: 156/255, 93/255, 65/255, 1
            pos_hint: {"center_x": .15, "center_y": .09} 
            on_press: app.root.current = 'initial'